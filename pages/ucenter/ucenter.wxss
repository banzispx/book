
.profile-info{
    width: 100%;
    height: 250rpx;
    padding: 0 30.25rpx;
    background: #f4f4f4;
    display: flex;
}
.profile-info .avatar{
  margin-top: 51rpx;
  height: 148rpx;
  width: 148rpx;
  border-radius: 50%;
}

.profile-info .info{

    line-height: 250rpx;
    padding-left: 31.25rpx;
    float: right;
    display: flex;
    width: 75%;
    color: #333;
    font-size: 37.5rpx;
}

.img{
  width: 50rpx;
  height: 50rpx;
  margin-top: 15rpx;
}
.connect{
  margin-top: 20rpx;
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  background: #f4f4f4;
  display: flex;
}
.advice{
  margin-top: 20rpx;
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  background: #f4f4f4;
  display: flex;
}

.hide {
  display: none;
}
 
.show {
  display: block;
  width: 100%;
  height: 100%;
  opacity:0.5;
  background-color:#888;
  position:absolute;
  padding-top: 50%;
}
.btn{
  width: 75%;
  text-align: center;
  color: firebrick;
}